        <Button Content="&gt;" Background="White" Foreground="Blue" HorizontalAlignment="Left" Margin="548,151,0,0" VerticalAlignment="Top" Height="18"/>
        <Button Content="&gt;&gt;" Background="White" Foreground="Blue" HorizontalAlignment="Left" Margin="566,151,0,0" VerticalAlignment="Top" Height="18"/>
        <RadioButton x:Name="rbtAutomatico" Content="Nome file automatico" Foreground="Blue" FontSize="10" HorizontalAlignment="Left" Margin="288,140,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.313,0.337"/>
        <RadioButton x:Name="rbtManuale" Content="Stesso nome file" Foreground="Blue" FontSize="10" HorizontalAlignment="Left" Margin="288,156,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.313,0.337"/>
        <CheckBox Content="conserva nome file vechio" Foreground="Blue" FontSize="10" HorizontalAlignment="Left" Margin="623,153,0,0" VerticalAlignment="Top"/>
        <DataGrid Background="LightGray" BorderThickness="1" BorderBrush="Black" Margin="0,194,0,237"/>
        <Image Height="198" Margin="20,336,20,18" Width="760"/>
        <TextBox HorizontalAlignment="Center" Margin="0,534,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="800"/>

    </Grid>
</Window>
