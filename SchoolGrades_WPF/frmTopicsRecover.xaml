        <TextBox HorizontalAlignment="Left" FontSize="10" Margin="288,26,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Button Content="&lt;" Background="White" Foreground="Blue" HorizontalAlignment="Left" Margin="423,26,0,0" VerticalAlignment="Top" Height="18"/>
        <Button Content="&gt;" Background="White" Foreground="Blue" HorizontalAlignment="Left" Margin="440,26,0,0" VerticalAlignment="Top" Height="18"/>
        <Label Content="Cod. Lezione" Foreground="Blue" FontSize="10" HorizontalAlignment="Left" Margin="0,44,0,0" VerticalAlignment="Top"/>
        <Label Content="Data" Foreground="Blue" FontSize="10" HorizontalAlignment="Left" Margin="106,44,0,0" VerticalAlignment="Top"/>
        <Label Content="Annotazioni sulla lezione" FontSize="10" Foreground="Blue" HorizontalAlignment="Left" Margin="237,44,0,0" VerticalAlignment="Top"/>
        <TextBox HorizontalAlignment="Left" Margin="0,70,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="84"/>
        <TextBox HorizontalAlignment="Left" Margin="237,70,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="171"/>
        <TextBox HorizontalAlignment="Left" Margin="106,70,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Button Content="Salva" Background="White" Foreground="Blue" FontWeight="Bold" FontSize="10" HorizontalAlignment="Left" Margin="423,70,0,0" VerticalAlignment="Top" Height="18"/>
        <Label Content="Cartella importazione di immagine o documento" Foreground="Blue" FontSize="10" HorizontalAlignment="Left" Margin="0,88,0,0" VerticalAlignment="Top"/>
        <TextBox HorizontalAlignment="Left" Margin="0,111,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="408"/>
        <Button Content="--" Background="White" Foreground="Blue" FontWeight="Bold" FontSize="10" HorizontalAlignment="Left" Margin="423,111,0,0" VerticalAlignment="Top" Height="18" Width="28"/>
        <Label Content="sottocartella memorizzazione immagine" Foreground="Blue" FontSize="10" HorizontalAlignment="Left" Margin="470,88,0,0" VerticalAlignment="Top"/>
        <TextBox HorizontalAlignment="Left" Margin="470,111,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="212"/>
        <Button Content="--" Background="White" Foreground="Blue" FontWeight="Bold" FontSize="10" HorizontalAlignment="Left" Margin="707,111,0,0" VerticalAlignment="Top" Height="18" Width="28"/>
        <Label Content="File dell'immagine o del documento da importare" Foreground="Blue" FontSize="10" HorizontalAlignment="Left" Margin="0,129,0,0" VerticalAlignment="Top"/>
        <TextBox HorizontalAlignment="Left" Margin="0,152,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="242"/>
        <Button Content="--" Background="White" Foreground="Blue" FontWeight="Bold" FontSize="10" HorizontalAlignment="Left" Margin="247,151,0,0" VerticalAlignment="Top" Height="18" Width="28"/>
        <Button Content="-" Background="White" Foreground="Blue" FontWeight="Bold" FontSize="20" HorizontalAlignment="Left" Margin="447,140,0,0" VerticalAlignment="Top" Height="29" Width="28"/>
        <Button Content="&lt;" Background="White" Foreground="Blue" HorizontalAlignment="Left" Margin="518,151,0,0" VerticalAlignment="Top" Height="18"/>
        <Button Content="+" Background="White" Foreground="Blue" FontWeight="Bold" FontSize="15" HorizontalAlignment="Left" Margin="414,140,0,0" VerticalAlignment="Top" Height="29" Width="28"/>
