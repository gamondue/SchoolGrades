        <Label Content="Anno Scol." Foreground="Blue" FontSize="10" HorizontalAlignment="Left" Margin="119,0,0,0" VerticalAlignment="Top"/>
        <TextBox HorizontalAlignment="Left" FontSize="10" Margin="0,26,0,0" TextWrapping="Wrap" Text="FOIS01100L" VerticalAlignment="Top" Width="106"/>
        <TextBox HorizontalAlignment="Left" FontSize="10" Margin="119,26,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="75" TextChanged="TextBox_TextChanged"/>
        <Label Content="Sigla Classe" Foreground="Blue" FontSize="10" HorizontalAlignment="Left" Margin="211,0,0,0" VerticalAlignment="Top"/>
        <TextBox HorizontalAlignment="Left" FontSize="10" Margin="211,26,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="72"/>
