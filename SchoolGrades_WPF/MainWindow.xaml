        <Label Content="Tipo domanda" HorizontalAlignment="Left" Margin="170,2,0,0" VerticalAlignment="Top" Foreground="DarkBlue"/>
        <TextBox HorizontalAlignment="Left" Margin="326,35,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="357" TextChanged="TextBox_TextChanged"/>
        <Label Content="Testo da ricercare" HorizontalAlignment="Left" Margin="326,0,0,0" VerticalAlignment="Top" Background="{x:Null}" Foreground="DarkBlue"/>
        <Button Content="Cerca" HorizontalAlignment="Left" Margin="702,35,0,0" VerticalAlignment="Top" Width="45" Foreground="DarkBlue"/>
        <Button Content="Pettine" HorizontalAlignment="Left" Margin="752,34,0,0" VerticalAlignment="Top" Click="Button_Click" Width="45" Foreground="DarkBlue"/>
