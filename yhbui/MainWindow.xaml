        </RadioButton>


        <RadioButton Margin="10,190,241,0" VerticalAlignment="Top" Foreground="#FF150EF3" Checked="RadioButton_Checked" >Tipi di voti
            <RadioButton.LayoutTransform>
                <ScaleTransform ScaleX="1.8" ScaleY="1.8" />
            </RadioButton.LayoutTransform>
        </RadioButton>


        <RadioButton Margin="10,244,241,0" VerticalAlignment="Top" Foreground="#FF150EF3" Checked="RadioButton_Checked" >Categorie di voti
            <RadioButton.LayoutTransform>
                <ScaleTransform ScaleX="1.8" ScaleY="1.8" />
            </RadioButton.LayoutTransform>
        </RadioButton>


        <RadioButton Margin="10,304,241,0" VerticalAlignment="Top" Foreground="#FF150EF3" Checked="RadioButton_Checked" >Scuole
            <RadioButton.LayoutTransform>
                <ScaleTransform ScaleX="1.8" ScaleY="1.8" />
            </RadioButton.LayoutTransform>
        </RadioButton>

        <RadioButton Margin="10,365,241,0" VerticalAlignment="Top" Foreground="#FF150EF3" Checked="RadioButton_Checked" >Anni scolastici
            <RadioButton.LayoutTransform>
                <ScaleTransform ScaleX="1.8" ScaleY="1.8" />
            </RadioButton.LayoutTransform>
        </RadioButton>


        <Button Margin="281,147,42,177" Background="White" Content="Apri tabella" FontSize="23" Foreground="#FF0027FF"    >   </Button>

    </Grid>
