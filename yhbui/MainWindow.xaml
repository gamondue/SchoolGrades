            <RadioButton.LayoutTransform>
                <ScaleTransform ScaleX="1.8" ScaleY="1.8" />
            </RadioButton.LayoutTransform>


        </RadioButton>

        <RadioButton Margin="10,65,262,0" VerticalAlignment="Top" Foreground="#FF150EF3" >Tipo di prove
            <RadioButton.LayoutTransform>
                <ScaleTransform ScaleX="1.8" ScaleY="1.8" />
            </RadioButton.LayoutTransform>
        </RadioButton>


        <RadioButton Margin="10,110,241,0" VerticalAlignment="Top" Foreground="#FF150EF3" Checked="RadioButton_Checked" >Tipi di domande
            <RadioButton.LayoutTransform>
                <ScaleTransform ScaleX="1.8" ScaleY="1.8" />
            </RadioButton.LayoutTransform>
        </RadioButton>


        <RadioButton Margin="10,158,241,0" VerticalAlignment="Top" Foreground="#FF150EF3" Checked="RadioButton_Checked" >Tipi di risposte
            <RadioButton.LayoutTransform>
                <ScaleTransform ScaleX="1.8" ScaleY="1.8" />
